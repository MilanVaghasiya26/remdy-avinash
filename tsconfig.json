// tsconfig.json
{
  "compilerOptions": {
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "*": ["*"]
    },
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts","index.ts"],
  "exclude": ["node_modules"]
}